        "dotenv": "^16.4.5",
        "express": "^5.0.0-beta.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.4.4",
        "multer": "^2.0.2",
        "serverless-http": "^3.2.0",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
