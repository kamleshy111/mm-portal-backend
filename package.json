{
    "name": "express-api-template",
    "version": "1.0.0",
    "description": "Scalable Express.js API template with JWT authentication and webhooks.",
    "main": "functions/server.js",
    "type": "module",
    "scripts": {
        "start": "node functions/server.js",
        "dev": "nodemon functions/server.js",
